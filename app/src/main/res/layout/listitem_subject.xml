<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/padding_horizontal"
    android:paddingVertical="@dimen/padding_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground" >

    <TextView
        android:id="@+id/subject_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/subject_units"
        tools:text="Subject" />

    <TextView
        android:id="@+id/subject_units"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/subject_grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_name"
        tools:text="Subject Units: 0" />

    <TextView
        android:id="@+id/subject_grade"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subject_units"
        app:layout_constraintTop_toBottomOf="@+id/subject_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Grade: 101.00" />

</androidx.constraintlayout.widget.ConstraintLayout>